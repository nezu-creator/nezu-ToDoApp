<div class="container">
   <ul>
    <% @board.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <%= form_with(model: @board, url: board_path(@board), method: 'put', local: true) do |f| %>
    <div>
      <%= f.label :title, 'Name' %>
    </div>
    <div>
      <%= f.text_field :name, class: 'text' %>
    </div>
    <div>
      <%= f.label :title, 'Description' %>
    </div>
     <div>
      <%= f.text_area :description %>
    </div>
    <%= f.submit 'Subumit' , class: 'btn-primary' %>
  <% end %>
</div>