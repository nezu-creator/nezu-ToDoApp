%h2 Blackets
.container
  - @tasks.each do |task|
    = link_to board_task_comments_path(id: task.id) do
      .card
        .card_image
          = image_tag 'eyecatch1.png'
        .card_content
          .card_title
            = board.name
          .card_heart
            = image_tag 'heart.svg'
            %span 23
          .card_detail
            = image_tag 'default-avatar.png'
            %div
              %p= board.user.display_name
              %p= board.display_created_at
              
  = link_to new_board_task_path do
    .btn-secondary
      +Add new Card
