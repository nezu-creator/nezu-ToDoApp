%h2 Blackets
.container
  - @tasks.each do |task|
    = link_to board_task_path(board_id: @board.id, id: task.id) do
      .card
        - if task.eyecatch.attached?
          .card_image
            = image_tag task.eyecatch
        .card_content
          .card_title
            = task.name
          .article_content
            = task.description
          .card_detail
            = image_tag 'default-avatar.png'


  = link_to new_board_task_path do
    .btn-secondary
      +Add new Card
