<!DOCTYPE html>
<html>
  <head>
    <title>NezuTodoapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
  </head>

  <body>
    <header class="header">
      <div class="header_logos">
        <% if !current_page?(root_path) && !current_page?(user_session_path) && !current_page?(new_user_registration_path) %>
          <%= link_to :back do %>
            <%= image_tag 'back.svg', class: 'header_back' %>
          <% end %>
        <% end %>
        <p class="header_pageTitle">Board</p>
      </div>
      <div class="dropdown">
        <% if !current_page?(user_session_path) && !current_page?(new_user_registration_path) %>
          <%= image_tag 'default-avatar.png', class: 'header_avatar dropbtn' %>
        <% end %>
        <div class="dropdown-content">
          <a href="#">プロフィール</a>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
